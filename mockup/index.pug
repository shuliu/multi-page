
//- extends ../_layouts/_templates/template-home.pug



//- block main
//-   //- - var category_group = [{'name':'aaa1', 'id': 1},{'name':'aaa2', 'id': 2},{'name':'aaa3', 'id': 3}]
//-   each item, index in category_group || []
