doctype html
html(xmlns="http://www.w3.org/1999/xhtml", xml:lang="zh-tw", lang="zh-tw")
  head
    block title
      title 我的帳戶
    include ../meta.pug

  body
    // { Header } 
    header
      - var MemberIslogin = true
      include ../header.pug
    
    // { Wrapper } 
    .wrapper
      .container
        //- *** [ Breadcrumb ] ***
        // { Breadcrumb } 
        block breadcrumb
        //- *** [ Main Block ] ***
        .row
          // { Aside } 
          aside.col-md-5
            block aside
          // { Main } 
          main.col-md-19
            block main
        //- *** [ GoTop ] ***
        // { GoTop } 
        a.btn-gotop
          i.icon.icon-arrow-up
          span TOP
    
    // { Footer } 
    footer.footer
      include ../footer.pug

    //- ********** Script **********
    include ../scripts.pug
