//- ** 自訂商品內容
mixin productItem(img, title, price, offer, tag)
  .col-md-6.product.product-view
    a(href="/dist/product-detail.html")
      img(alt="商品圖", src="/public/images/demo/"+(img))
    .content
      .tags-group.product-tags
        if (tag == 1)
          span.tag.tag-primary.tag-mini(href="") 神腦破盤
        else if (tag == 2)
          span.tag.tag-primary.tag-mini(href="") 獨家販售
          span.tag.tag-secondary.tag-mini(href="") 限量新品
      .title
        a(href="/dist/product-detail.html")= title
      .price
        del.fn-sm= price
        b.fn-md= offer


