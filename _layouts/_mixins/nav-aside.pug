//- Mixin -------------------------------
//- 
//- ** Use for Member / Order / About
mixin navsAside(val, title, items)
  .menu-list-panel.secondary 
    h4.menu-list-title= title
    ul.menu-list
      each item, index in items
        if (val === index)
          li.menu-list-item.active
            a.has-arrow(href=item.link)= item.name
        else
          li.menu-list-item
            a.has-arrow(href=item.link)= item.name 

//- ** Use for 2R
mixin navs2RAside(val, title, items)
  .menu-list-panel.primary 
    h4.menu-list-title= title
    ul.menu-list
      each item, index in items
        if (val === index)
          li.menu-list-item.active
            a.has-arrow(href=item.link, target=item.target)= item.name
        else
          li.menu-list-item
            a.has-arrow(href=item.link, target=item.target)= item.name 

//- ** FAQ專用選單
mixin navsAside_hasFaq(items)
  .panel.panel-inverted.stackable 客服FAQ
  each item in items
    .panel.panel-primary.shrink.stackable
      .panel-head= item.name 
      .panel-body
        ul.has-type-disc
          each sub in item.cate
            li
              a(href=sub.link)= sub.name
//- ** 2R 常見問題專用選單
