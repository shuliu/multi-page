//- ** Member專用選單
mixin navsAside_hasMember(val, items)
  .panel.panel-caption.stackable #[a(href="/dist/member-fix-v1/mb-home.html") 我的帳戶]
  each item in items
    .panel.panel-default.stackable
      .panel-head.none-underline= item.name 
      .panel-body
        ul.has-type-caret.fn-sm
          each sub in item.cate
            if val == sub.id
              li.active
                a(href=sub.link) #{sub.name}#[b.fn-mini.warning.spacing.sm #{sub.tag}]
            else if sub.target == true
              li
                a(href=sub.link, target="_blank") #{sub.name}#[b.fn-mini.warning.spacing.sm #{sub.tag}]
            else
              li
                a(href=sub.link) #{sub.name}#[b.fn-mini.warning.spacing.sm #{sub.tag}]