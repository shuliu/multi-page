//- ** Mixins 
//- 
//- A) <a> 屬性樣式
mixin breadcrumb(items)
  .row
    ul.breadcrumbs
      each item in items
        li
          a(href=item.link)= item.name

//- A_new) <a> 屬性樣式 :: add 20170602 by sq
mixin breadcrumb_new(cate, sub, child)
  .row
    ul.breadcrumbs
      //- 第一層
      li #[a(href="/dist/home.html") 首頁]
      //- 第二層
      each item in crumbs
        if cate == item.id 
          li #[a(href=item.link)= item.name]
        //- 第三層
        each item2 in item.cate_sub
          if sub == item2.id
            li #[a(href=item2.link)= item2.name]
          //- 第四層
          each item3 in item2.sub_child
            if child == item3.id
              li #[a(href=item3.link)= item3.name]
              
//- B) <select> 屬性樣式
//- 目前使用於 category系列頁面
mixin breadcrumb_select(items)
  .row
    ul.breadcrumbs
      each item in items
        li
          a(href="/dist/home.html")= item.title
        li
          select(name="")
            each cate1 in item.cateOne
              option(value=cate1)= cate1
        unless noneTwo
          li
            select(name="")
              each cate2 in item.cateTwo
                option(value=cate2)= cate2
        unless noneThree
          li
            select(name="")
              each cate3 in item.cateThree
                option(value=cate3)= cate3
        unless noneLast
          li
            a(href="/dist/product-detail.html")= item.prdName


//- C) <dropdown> 屬性樣式
