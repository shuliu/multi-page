mixin breadcrumb_dropdown(items)
  .row.clearfix
    ul.breadcrumbs.pull-left
      each item in items
        li
          a(href="/dist/home.html")= item.title
        li.dropdown
          a.dropdown-toggle(href="javascript:;", data-toggle="dropdown") 手機通訊
          .dropdown-menu
            each cate1 in item.cateOne
              a.nav-link(href="/dist/category-main.html")= cate1
        if cateLevelTwo
          li.dropdown
            a.dropdown-toggle(href="javascript:;", data-toggle="dropdown") 手機
            .dropdown-menu
              each cate2 in item.cateTwo
                a.nav-link(href="/dist/category-sub.html")= cate2
        if cateLevelThree
