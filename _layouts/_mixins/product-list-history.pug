// 瀏覽記錄 
.row
  .js-my-history-slider.cell-5
    .slider-lead
      h4.title 瀏覽記錄
      ol.slider-control.bx-pager
        each i in [0, 1, 2, 3]
          li.clear
            a(data-slide-index=i, href="javascript:;")
    .slider
      .slider-view.js-gallery-slider-view
        - for (var i=1; i<=4; i++) {
          .item
            each item in prdList_history
              .product.product-view
                a(href="/dist/product-detail.html")
                  img(alt="商品圖", src=item.image)
                .content
                  .tags-group.product-tags
                    //- span.tag.tag-primary.tag-mini(href="") 獨家販售
                    //- span.tag.tag-secondary.tag-mini(href="") 限量新品
                  .title
                    a(href="/dist/product-detail.html")
                      | #{index+1}#{item.title}
                  .price
                    b.fn-md= item.price
        - }

